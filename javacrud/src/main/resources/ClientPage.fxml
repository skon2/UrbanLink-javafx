<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to right, #003D29, #006B46);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controller.ClientPageController">

    <VBox fx:id="userAvisContainer" spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10">        <!-- Title -->
        <Label text="Welcome, Client!" textFill="WHITE" style="-fx-font-size: 24px; -fx-font-family: Arial;" />

        <!-- Reclamation Button -->
        <Button onAction="#handleReclamationButton" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 20; -fx-cursor: hand;" text="Create Reclamation" />

        <!-- Check Reclamation Response Button -->
        <Button onAction="#handleCheckReclamationResponseButton" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 20; -fx-cursor: hand;" text="Check Reclamation Response" />

        <!-- View Reviews ButtoCannot set javafx.scene.layout.VBox to field 'userAvisContainer'n -->
        <Button onAction="#handleViewReviewsButton" style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 20; -fx-cursor: hand;" text="View Reviews" />

        <!-- Logout Button -->
        <Button onAction="#handleLogoutButton" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 20; -fx-cursor: hand;" text="Logout" />
    </VBox>

</AnchorPane>